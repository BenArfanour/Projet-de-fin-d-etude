<html>

<head>
 <title>Connectez Vous</title>
</head>

<body>
{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">aaa</h3>
                </div>
                <div class="panel-body">

                    <form accept-charset="UTF-8" role="form" action="{{ path("fos_user_security_check") }}" method="post">
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="Nom d'utilisateur" name="_username" id="username" type="text" value="{{ last_username }}" required="required">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Mot de Passe" type="password" id="password" name="_password" required="required">
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" > {{ 'security.login.remember_me'|trans }}
                                </label>
                            </div>
                            <input class="btn btn-lg btn-success btn-block"  type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"  value="Connexion">
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

</body>
</html>